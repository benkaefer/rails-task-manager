<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
<%= link_to "Delete",delete_task_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
